1. cd src/

2. make yes-PWMLFF

# activate your virtual environment: need to install pytorch2.0
3. conda activate pytorch2

# add this to your environment variables before compile lammps
4. export OP_LIB_PATH=$(dirname $(dirname $(which PWMLFF)))/op/build/lib   # you must modify this!!!

5. make mpi -j4  

# add this to your environment variables before running lammps
6. export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$(python3 -c "import torch; print(torch.__path__[0])")/lib:$(dirname $(dirname $(which python3)))/lib:$(dirname $(dirname $(which PWMLFF)))/op/build/lib

7. (optional) echo "export LD_LIBRARY_PATH=\$LD_LIBRARY_PATH:$(python3 -c "import torch; print(torch.__path__[0])")/lib:$(dirname $(dirname $(which python3)))/lib:$(dirname $(dirname $(which PWMLFF)))/op/build/lib" >> ~/.bashrc

8. run lammps  (For GPU version, use lmp_mpi_gpu)


